# source nvm for this session
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"

# run node 0.11.n. allow errors to pass through to the user.
nvm use v0.11 >/dev/null

# pass control to gulp
gulp "$@"